{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["./typing", "./node_modules/@types"],
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "echojs-lib": ["node_modules/echojs-lib"]
    }
  },
  "exclude": ["node_modules", "**/*spec.ts"]
}
