{
  "name": "explorer-server",
  "author": {
    "name": "PixelPlex, Inc.",
    "email": "info@pixelplex.io",
    "url": "https://pixelplex.io"
  },
  "description": "Server for Echo Explorer",
  "homepage": "https://github.com/echoprotocol/explorer-server",
  "version": "1.2.0",
  "license": "MIT",
  "main": "main.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@types/express-serve-static-core": "4.16.7",
    "@types/fs-extra": "^8.0.1",
    "apollo-boost": "^0.4.4",
    "canvas": "^2.5.0",
    "canvg": "^2.0.0",
    "class-transformer": "^0.2.3",
    "config": "^3.1.0",
    "cors": "^2.8.5",
    "echojs-contract": "^0.4.9",
    "echojs-lib": "^1.9.1-echo.13-rc.1",
    "echojs-ping": "^0.1.5",
    "fs-extra": "^8.1.0",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "husky": "^2.4.1",
    "isomorphic-fetch": "^2.2.1",
    "js-sha3": "^0.8.0",
    "mongoose": "^5.5.13",
    "multer": "^1.4.1",
    "raven": "^2.6.4",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "solc": "^0.5.9",
    "svgdom": "0.0.20",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.14",
    "@types/joi": "^14.3.3",
    "@types/mongoose": "^5.5.5",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "~3.5.2",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/echoprotocol/explorer-server.git"
  },
  "bugs": {
    "url": "https://github.com/echoprotocol/explorer-server/issues"
  }
}
